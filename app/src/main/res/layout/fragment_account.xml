<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="bbqcreations.drinkiit.AccountFragment"
    android:orientation="vertical"
    android:background="@drawable/bg_image"
    android:weightSum="7">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_weight="0.5">

        <TextView
            style="@style/title"
            android:text="@string/title_my_account"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_marginTop="10sp"
        android:background="@drawable/border_top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="10sp"
            android:background="@drawable/full_border_grey">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_name"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_account_name"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center|top"
                android:textStyle="italic" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_email"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_account_email"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textStyle="italic"
                android:gravity="center|top" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_solde"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_account_solde"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center|top"
                android:textStyle="italic" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_activated"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_account_activated"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textStyle="italic"
                android:gravity="center|top" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_deconnexion"
            android:id="@+id/button"
            android:layout_gravity="center"
            style="@style/button"
            android:onClick="logOut" />
    </FrameLayout>
</LinearLayout>

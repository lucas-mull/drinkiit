<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="bbqcreations.drinkiit.AboutFragment"
    android:background="@drawable/bg_image">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:weightSum="7">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/title_about"
                android:id="@+id/textView12"
                android:layout_gravity="center"
                style="@style/title" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6.5"
            android:layout_marginTop="10sp"
            android:background="@drawable/border_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:background="@drawable/full_border_blue"
                android:weightSum="3">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cette application a été créée par Lucas Mull pour les étudiants de l&apos;ENSIIE (cette bande de gros)."
                    android:id="@+id/textView13"
                    android:layout_gravity="center"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_gravity="center"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:text="Sales batards" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
